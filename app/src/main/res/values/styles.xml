<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/color_clouds</item>
    </style>

    <style name="NavigationTheme.Drawer" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    
    <style name="FontTextNavigation">
        <item name="android:fontFamily">@font/atmospheric</item>
    </style>
</resources>