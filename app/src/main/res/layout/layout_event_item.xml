<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_parent"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_centerInParent="true"
    android:layout_margin="4dp"
    android:padding="8dp"
    tools:context=".adapters.EventScheduleRecyclerAdapter">

    <ImageView
        android:id="@+id/event_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:transitionName="@string/transition_time"
        tools:background="@color/color_clouds"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:progressBackgroundTint="@color/color_sky"
        app:layout_constraintBottom_toBottomOf="@+id/event_background_image"
        app:layout_constraintEnd_toEndOf="@+id/event_background_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/event_background_image" />

</androidx.constraintlayout.widget.ConstraintLayout>